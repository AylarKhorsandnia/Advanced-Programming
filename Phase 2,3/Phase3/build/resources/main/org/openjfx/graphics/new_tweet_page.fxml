<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.graphics.pages.NewTweetPageFXML">
   <children>
      <StackPane fx:id="StackPaneNewTweet" prefHeight="500.0" prefWidth="700.0">
         <children>
            <AnchorPane prefHeight="500.0" prefWidth="700.0">
               <children>
                  <Button fx:id="AllTweetButton" layoutX="552.0" layoutY="36.0" mnemonicParsing="false" onAction="#allTweet" text="All tweets" textFill="#ff6600">
                     <font>
                        <Font name="Cambria Italic" size="16.0" />
                     </font>
                  </Button>
                  <Label layoutX="128.0" layoutY="68.0" prefHeight="34.0" prefWidth="196.0" text="What's happening?">
                     <font>
                        <Font name="Cambria Bold Italic" size="21.0" />
                     </font>
                  </Label>
                  <Label fx:id="UserNameLabel" layoutX="10.0" layoutY="68.0" prefHeight="34.0" prefWidth="117.0">
                     <font>
                        <Font name="Cambria Italic" size="20.0" />
                     </font>
                  </Label>
                  <Button fx:id="TweetButton" layoutX="147.0" layoutY="400.0" mnemonicParsing="false" onAction="#tweet" prefHeight="34.0" prefWidth="118.0" text="Tweet" textFill="#ff6600">
                     <font>
                        <Font name="Cambria Italic" size="15.0" />
                     </font>
                  </Button>
               </children>
            </AnchorPane>
         </children>
      </StackPane>
      <ImageView fitHeight="501.0" fitWidth="700.0" layoutY="114.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../Images/bg1.png" />
         </image>
      </ImageView>
      <TextArea fx:id="TweetText" layoutX="39.0" layoutY="128.0" prefHeight="226.0" prefWidth="294.0" promptText="Write here..." wrapText="true" />
      <StackPane fx:id="StackPaneAllTweets" layoutX="34.0" layoutY="20.0" prefHeight="76.0" prefWidth="594.0" visible="false">
         <children>
            <AnchorPane prefHeight="200.0" prefWidth="200.0">
               <children>
                  <Label layoutX="30.0" layoutY="38.0" prefHeight="34.0" prefWidth="136.0" text="All your tweets">
                     <font>
                        <Font name="Cambria Italic" size="21.0" />
                     </font>
                  </Label>
               </children>
            </AnchorPane>
         </children>
      </StackPane>
      <Button fx:id="CancelButton" layoutX="414.0" layoutY="410.0" mnemonicParsing="false" onAction="#cancel" prefHeight="34.0" prefWidth="118.0" text="Cancel">
         <font>
            <Font name="Cambria Italic" size="15.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
